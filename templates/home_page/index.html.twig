{% extends 'base.html.twig' %}

{% block title %}HomePage index{% endblock %}

{% block body %}
    <h1>HomePage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>PresentationText</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for home_page in home_pages %}
            <tr>
                <td>{{ home_page.id }}</td>
                <td>{{ home_page.title }}</td>
                <td>{{ home_page.presentationText }}</td>
                <td>
                    <a href="{{ path('app_home_page_show', {'id': home_page.id}) }}">show</a>
                    <a href="{{ path('app_home_page_edit', {'id': home_page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_home_page_new') }}">Create new</a>
{% endblock %}
