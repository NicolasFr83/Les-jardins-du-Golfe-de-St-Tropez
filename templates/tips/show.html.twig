{% extends 'base.html.twig' %}

{% block title %}{{ tip.name }} - Les jardins du Golfe{% endblock %}

{% block body %}
    <main class='tip-show'>
        <div class='tip-show__design'>
            <img class='tip-show__image' src="{{ vich_uploader_asset(tip, 'imageFile') }}" alt="{{ tip.name }}">
            <h1 class='tip-show__title'>{{ tip.name }}</h1>
            <div class='tip-show__planting'>
                <h2 class='tip-show__planting--title'>Plantation :</h2>
                <p class='tip-show__planting--text'>{{ tip.planting }}</p>
            </div>
            <div class='tip-show__maintenance'>
                <h2 class='tip-show__maintenance--title'>Entretien :</h2>
                <p class='tip-show__maintenance--text'>{{ tip.maintenance }}</p>
            </div>
        </div>
        <div class='tip-show__links'>
        {% if is_granted('ROLE_ADMIN') %}
            {{ include('tips/_delete_form.html.twig') }}
            <a class='tip-show__links--modifier' href="{{ path('app_tips_edit', {'id': tip.id}) }}">Modifier</a>
        {% endif %}
            <a class='tip-show__links--back-tips' href="{{ path('app_tips_index') }}">Retourner Ã  la liste des sujets</a>
        </div>
    </main>
{% endblock %}
