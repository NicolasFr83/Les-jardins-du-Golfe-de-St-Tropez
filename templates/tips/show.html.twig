{% extends 'base.html.twig' %}

{% block title %}{{ tip.name }} - Les jardins du Golfe{% endblock %}

{% block body %}
    <main class='show-tip flex-center card-flux'>
        <img class='show-tip__image' src="{{ vich_uploader_asset(tip, 'imageFile') }}" alt="{{ tip.name }}">
        <h1 class='show-tip__title'>{{ tip.name }}</h1>
        <p class='show-tip__planting'>{{ tip.planting }}</p>
        <p class='show-tip__maintenance'>{{ tip.maintenance }}</p>
    </main>

    <div class='tip-link flex-center'>
    {% if is_granted('ROLE_ADMIN') %}
        {{ include('tips/_delete_form.html.twig') }}
        <a href="{{ path('app_tips_edit', {'id': tip.id}) }}">Modifier</a>
    {% endif %}
        <a class='show-tip-link__back-tips btn btn__linear-gradient' href="{{ path('app_tips_index') }}">Retourner Ã  la liste des sujets</a>
    </div>
{% endblock %}
