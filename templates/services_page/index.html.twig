{% extends 'base.html.twig' %}

{% block title %}Nos services{% endblock %}

{% block body %}
    <main class="services">
        {% for services_page in services_pages %}
            <section class="title-page__design">
                <img src="{{ asset('build/images/palmier.png')}}" alt="Palmier qui tourne" class='title-page__icon'>
                <h1 class="title-page__title">{{ services_page.title }}</h1>
                <img src="{{ asset('build/images/palmier.png')}}" alt="Palmier qui tourne" class='title-page__icon'>
            </section>
            <section>   
                <h2 class="services__title">Voici Nos services entretien:</h2>
                <div class="services__contain">
                    <p class="services__text">{{ services_page.servicesPresentation }}</p>
                </div>
                <div class='contain'> 
                    <img class='contain__images'src="{{ asset('build/images/photo-villa.jpg')}}" alt="photo de jardin">
                    <img class='contain__images'src="{{ asset('build/images/photo-villa-2.jpg')}}" alt="photo de jardin">
                    <img class='contain__images'src="{{ asset('build/images/garden-2040714_640.jpg')}}" alt="photo de jardin">
                </div>
            </section> 
            <section>
                <h2 class="services__title">Voici nos services création:</h2>
                <div class="services__contain">
                    <p class="services__text">{{ services_page.creationPresentationText }}</p>
                </div>
                <div class="contain">
                    <img class="contain__images" src="{{ asset('build/images/construction-site-.jpg')}}" alt="photo création">
                    <img class="contain__images" src="{{ asset('build/images/construction-work-.jpg')}}" alt="photo création">
                    <img class="contain__images" src="{{ asset('build/images/people-.jpg')}}" alt="photo création">
                </div>
            </section>
                <h2 class="services__title">Nos services spécialisés:</h2>
                <div class="services__contain">
                    <p class="services__text">{{ services_page.specialServicesText }}</p>
                </div>
                <div class="contain">
                    <img class="contain__images" src="{{ asset('build/images/swimming-pool.jpg')}}" alt="photo création">
                    <img class="contain__images" src="{{ asset('build/images/pexels.jpg')}}" alt="photo création">
                    <img class="contain__images" src="{{ asset('build/images/wash-concrete.jpg')}}" alt="photo création">
                </div>
            </section>
            {% if is_granted('ROLE_ADMIN') %}		
            <div class="admin-services-page-edit">
                <a class="buton admin-services-page-edit__button" href="{{ path('app_services_page_edit', {'id': services_page.id}) }}">Modifier</a>
            </div>
            {% endif %}
        {% endfor %}
        <section class="openingSection">
            {% include "opening/index.html.twig" %}
        </section>
    </main>
{% endblock %}


