{% extends 'base.html.twig' %}

{% block title %}{{ topic.name }} - Les jardins du Golfe{% endblock %}

{% block body %}
    <main class='show-topic flex-center card-flux'>
        <img class='show-topic__image' src="{{ vich_uploader_asset(topic, 'imageFile') }}" alt="{{ topic.name }}">
        <h1 class='show-topic__title'>{{ topic.name }}</h1>
        <p>Nom latin : {{topic.latinName}}</p>
        <p class='show-topic__description'>{{ topic.description }}</p>
        <p>Arrosage : {{ topic.watering }}</p>
        <p>Lieu de plantation : {{ topic.exposition }}</p>
        <p>Exposition : {{ topic.exposure }}</p>
    </main>

    <div class='topic-link flex-center'>
    {% if is_granted('ROLE_ADMIN') %}
        {{ include('topics/_delete_form.html.twig') }}
        <a href="{{ path('app_topics_edit', {'id': topic.id}) }}">edit</a>
    {% endif %}
        <a class='show-topic-link__back-topics btn btn__linear-gradient' href="{{ path('app_topics_index') }}">Retourner Ã  la liste des sujets</a>
    </div>

{% endblock %}
