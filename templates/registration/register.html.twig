{% extends 'base.html.twig' %}

{% block title %}Inscription - Les Jardins du Golfe{% endblock %}

{% block body %}

    <main class='register-form'>
        <div class='register-form__design'>
            <h1 class='register-form__title'>Inscription</h1>

            <section class="register-form__flux">
                {{ form_start(registrationForm, {'attr': {'class': 'register-form__form'}}) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        'label': 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.name) }}
                    {{ form_row(registrationForm.firstname) }}
                    {{ form_row(registrationForm.agreeTerms, {
                        'label': 'J\'accepte les conditions d\'utilisation'
                    }) }}
                    <div class='register-form__button-div'>
                        <button type="submit" class="register-form__button-div--button">S'inscire</button>
                    </div>
                {{ form_end(registrationForm) }}
            </section>
        </div>
        <section class="openingSection">
            {% include "opening/index.html.twig" %}
        </section>
    </main>

{% endblock %}
