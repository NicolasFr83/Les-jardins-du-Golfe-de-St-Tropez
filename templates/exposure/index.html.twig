{% extends 'base.html.twig' %}

{% block title %}Exposure index{% endblock %}

{% block body %}
    <h1>Exposure index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exposure in exposures %}
            <tr>
                <td>{{ exposure.id }}</td>
                <td>{{ exposure.name }}</td>
                <td>
                    <a href="{{ path('app_exposure_show', {'id': exposure.id}) }}">show</a>
                    <a href="{{ path('app_exposure_edit', {'id': exposure.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_exposure_new') }}">Create new</a>
{% endblock %}
