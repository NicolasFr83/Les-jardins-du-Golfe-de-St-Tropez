{% extends 'base.html.twig' %}

{% block title %}Page de contact{% endblock %}

{% block body %}
    <main class="contact-page">
    {% for contact_page in contact_pages %}
        <section class="contact-page__description">
            <h1 class="contact-page__description--title">{{ contact_page.title }}</h1>
            <p class="contact-page__description--text">{{ contact_page.presentationText }}</p>
        </section>
        <section class='form-contact'>
            <h1 class='form-contact__title'>Formulaire de contact</h1>
            <section class='form-contact__flux'>
                {{form(form, {'attr': {'class': 'form-contact__form'}})}}
            </section>
        </section>
    {% if is_granted('ROLE_ADMIN') %}
        <a class="contact-page__admin-link" href="{{ path('app_contact_page_edit', {'id': contact_page.id}) }}">Modifier la page</a>
    {% endif %}
    {% endfor %}
        <section class="openingSection">
            {% include "opening/index.html.twig" %}
        </section>
    </main>
{% endblock %}
