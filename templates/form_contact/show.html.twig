{% extends 'base.html.twig' %}

{% block title %}FormContact{% endblock %}

{% block body %}
    <h1>FormContact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ form_contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ form_contact.name }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ form_contact.firstName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ form_contact.email }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ form_contact.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ form_contact.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ form_contact.message }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ form_contact.createdAt ? form_contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_form_contact_index') }}">back to list</a>

    <a href="{{ path('app_form_contact_edit', {'id': form_contact.id}) }}">edit</a>

    {{ include('form_contact/_delete_form.html.twig') }}
{% endblock %}
