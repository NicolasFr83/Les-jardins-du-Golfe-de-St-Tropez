{% extends 'base.html.twig' %}

{% block title %}Watering index{% endblock %}

{% block body %}
    <h1>Watering index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for watering in waterings %}
            <tr>
                <td>{{ watering.id }}</td>
                <td>{{ watering.name }}</td>
                <td>
                    <a href="{{ path('app_watering_show', {'id': watering.id}) }}">show</a>
                    <a href="{{ path('app_watering_edit', {'id': watering.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_watering_new') }}">Create new</a>
{% endblock %}
